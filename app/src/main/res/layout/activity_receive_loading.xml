<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/receivePrimaryColor"
    tools:context=".Receive.Receive_loading">

    <ProgressBar
        android:id="@+id/progressBar_receive_loading"
        style="?android:attr/progressBarStyle"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:indeterminate="true"
        wheel:layout_constraintBottom_toBottomOf="parent"
        wheel:layout_constraintEnd_toEndOf="parent"
        wheel:layout_constraintStart_toStartOf="parent"
        wheel:layout_constraintTop_toBottomOf="@+id/downloading_filename" />

    <ImageView
        android:id="@+id/circle_receive_loading"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:tint="#424242"
        wheel:layout_constraintBottom_toBottomOf="@+id/progressBar_receive_loading"
        wheel:layout_constraintEnd_toEndOf="@+id/progressBar_receive_loading"
        wheel:layout_constraintStart_toStartOf="@+id/progressBar_receive_loading"
        wheel:layout_constraintTop_toTopOf="@+id/progressBar_receive_loading"
        wheel:srcCompat="@drawable/circle_receive" />

    <TextView
        android:id="@+id/percentage_receive_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="0%"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        wheel:layout_constraintBottom_toBottomOf="@+id/circle_receive_loading"
        wheel:layout_constraintEnd_toEndOf="@+id/circle_receive_loading"
        wheel:layout_constraintStart_toStartOf="@+id/circle_receive_loading"
        wheel:layout_constraintTop_toTopOf="@+id/circle_receive_loading" />

    <TextView
        android:id="@+id/downloading_ip_remote_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="35dp"
        android:text="IP Remoto"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        wheel:layout_constraintEnd_toStartOf="@+id/downloading_ip_local_text"
        wheel:layout_constraintStart_toStartOf="parent"
        wheel:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/downloading_ip_local_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="35dp"
        android:text="IP Locale"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        wheel:layout_constraintEnd_toEndOf="parent"
        wheel:layout_constraintStart_toEndOf="@+id/downloading_ip_remote_text"
        wheel:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/downloading_ip_remote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/off"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        wheel:layout_constraintEnd_toEndOf="@+id/downloading_ip_remote_text"
        wheel:layout_constraintStart_toStartOf="@+id/downloading_ip_remote_text"
        wheel:layout_constraintTop_toBottomOf="@+id/downloading_ip_remote_text" />

    <TextView
        android:id="@+id/downloading_ip_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/off"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        wheel:layout_constraintEnd_toEndOf="@+id/downloading_ip_local_text"
        wheel:layout_constraintStart_toStartOf="@+id/downloading_ip_local_text"
        wheel:layout_constraintTop_toBottomOf="@+id/downloading_ip_local_text" />

    <TextView
        android:id="@+id/downloading_bluetooth_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="25dp"
        android:text="Nome Bluetooth"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        wheel:layout_constraintEnd_toEndOf="parent"
        wheel:layout_constraintHorizontal_bias="0.502"
        wheel:layout_constraintStart_toStartOf="parent"
        wheel:layout_constraintTop_toBottomOf="@+id/downloading_ip_remote" />

    <TextView
        android:id="@+id/downloading_bluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/off"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        wheel:layout_constraintEnd_toEndOf="@+id/downloading_bluetooth_text"
        wheel:layout_constraintStart_toStartOf="@+id/downloading_bluetooth_text"
        wheel:layout_constraintTop_toBottomOf="@+id/downloading_bluetooth_text" />

    <TextView
        android:id="@+id/downloading_filename_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:text="File in ricezione"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="invisible"
        wheel:layout_constraintEnd_toEndOf="parent"
        wheel:layout_constraintHorizontal_bias="0.502"
        wheel:layout_constraintStart_toStartOf="parent"
        wheel:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/downloading_filename"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        android:visibility="invisible"
        wheel:layout_constraintEnd_toEndOf="@+id/downloading_filename_text"
        wheel:layout_constraintStart_toStartOf="@+id/downloading_filename_text"
        wheel:layout_constraintTop_toBottomOf="@+id/downloading_filename_text" />
</android.support.constraint.ConstraintLayout>